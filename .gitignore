# =========================================
# SMART-ORDER PROJECT .gitignore
# Backend + Frontend + Firebase + Node.js
# =========================================

# -------------------------
# Node modules (BOTH apps)
# -------------------------
node_modules/
backend/node_modules/
frontend/node_modules/

npm-debug.log
yarn-debug.log
pnpm-debug.log

# -------------------------
# Environment Variables
# -------------------------
.env
.env.local
.env.*.local
backend/.env
frontend/.env

# Firebase Admin Private Key
serviceAccountKey.json
backend/serviceAccountKey.json

# Firebase configs
.firebase/
functions/.runtimeconfig.json
backend/functions/.runtimeconfig.json

# -------------------------
# Backend build output
# -------------------------
backend/dist/
backend/build/
backend/tmp/
backend/temp/

# -------------------------
# Frontend build output
# -------------------------
frontend/build/
frontend/dist/
frontend/.next/
frontend/out/
frontend/.next/cache/
frontend/.next/static/

# -------------------------
# Logs
# -------------------------
logs/
*.log
backend/logs/
frontend/logs/

# -------------------------
# OS-level files
# -------------------------
.DS_Store
Thumbs.db

# -------------------------
# IDE / Editor settings
# -------------------------
.vscode/
.idea/
*.swp
*.swo

# -------------------------
# Cache
# -------------------------
.cache/
.parcel-cache/
.eslintcache
frontend/.parcel-cache
frontend/.vite/
vite.config.ts.timestamp*

# -------------------------
# Storybook / test / misc
# -------------------------
storybook-static/
coverage/
*.pid
*.seed
*.tgz

# -------------------------
# TypeScript
# -------------------------
*.tsbuildinfo
frontend/*.tsbuildinfo
backend/*.tsbuildinfo
